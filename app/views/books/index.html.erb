<table class="table table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>ISBN</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.author %></td>
      <td><%= book.isbn %></td>
      <td>
        <% if book.available? %>
          <span class="badge bg-success">Available</span>
        <% else %>
          <span class="badge bg-warning">Borrowed</span>
        <% end %>
      </td>
      <td>
        <%= link_to "View", book_path(book), class: "btn btn-info btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <%= link_to "Add New Book", new_book_path, class: "btn btn-primary" %>
<% end %>
